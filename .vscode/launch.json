{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit: debug app.py",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "app.py",
        "--server.headless=true"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Streamlit: debug (no headless)",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "app.py"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
