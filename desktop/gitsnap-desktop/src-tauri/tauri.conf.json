{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gitsnap-desktop",
  "version": "0.1.0",
  "identifier": "com.mcontursi.gitsnap-desktop",
  "build": {
    "beforeDevCommand": "python ../../scripts/tauri_noop.py",
    "devUrl": "http://localhost:8501",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "GitSnap",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
